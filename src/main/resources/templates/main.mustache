<!DOCTYPE html>
<html>

<body>
<div>
    <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        <input type="submit" value="Sign Out">
    </form>
</div>

<div>
    <form method="post">
        <input type="text" name="text" placeholder="enter message" autocomplete="off"/>
        <input type="text" name="tag" placeholder="enter tag" autocomplete="off"/>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        <button type="submit">add</button>
    </form>
</div>

<div>List of messages</div>
<form method="post" action="filter">
    <input type="text" name="filter" autocomplete="off">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}">
    <button type="submit">search by tag</button>
</form>
{{#messages}}
    <div>
        <b>{{id}}</b>
        <span>{{text}}</span>
        <i>{{tag}}</i>
        <stront>{{authorName}}</stront>
    </div>
{{/messages}}
</body>
</html>
